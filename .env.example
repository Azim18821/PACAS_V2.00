# PACAS Environment Configuration
# Copy this file to .env and fill in your API keys

# ===== API Keys (REQUIRED) =====
# ScraperAPI Key (required for web scraping)
# Get your key from: https://www.scraperapi.com/
SCRAPER_API_KEY=your_scraperapi_key_here

# Apify Token (optional - for future OpenRent integration)
APIFY_TOKEN=your_apify_token_here

# ===== Security Settings =====
# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
# Example: https://myapp.com,https://www.myapp.com
ALLOWED_ORIGINS=*

# ===== Rate Limiting =====
# Maximum API requests per day (prevents cost overruns)
MAX_REQUESTS_PER_DAY=1000

# Maximum API requests per hour
MAX_REQUESTS_PER_HOUR=100

# ===== Flask Settings =====
# Flask host (use 0.0.0.0 to allow external connections)
FLASK_HOST=127.0.0.1

# Flask port
FLASK_PORT=5000

# Debug mode (set to False in production)
FLASK_DEBUG=False

# ===== Database Settings =====
# Database file path (relative to project root)
DATABASE_PATH=listings.db

# Cache duration in hours (how long to keep cached searches)
CACHE_HOURS=24

# ===== Optional Proxy Keys =====
# BrightData Proxy Key (alternative scraping provider)
BRIGHTDATA_KEY=your_brightdata_key_here

# ScrapingBee Key (alternative scraping provider)
SCRAPINGBEE_KEY=your_scrapingbee_key_here

# ProxyScrape Key (proxy provider)
PROXY_SCRAPE_KEY=your_proxyscrape_key_here
